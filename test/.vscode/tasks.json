{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "hbmk2",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "tasks": [
        {
    "problemMatcher": [
        {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        },
        {
            "owner": "harbour",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*)\\((\\d+)\\)\\s+(Warning|Error)\\s+(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            }
        }
    ],
            "isBuildCommand": true,
            "args": [
                "builds",
                "-gtcgi",
                "-w", "-ql"
            ],
            "taskName": "buildsTest"
        },
        {
            "args": [
                "socket",
                "-gtcgi",
                "-w", "-ql"
            ],
            "taskName": "socketTest"
        }
    ]
}