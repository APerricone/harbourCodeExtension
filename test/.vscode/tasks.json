{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "hbmk2",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "windows": {
        "command": "myBuild.bat"
    },
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [ "-lcode_dbg", "-L.", "${relativeFile}", "-gtcgi", "-w", "-ql", "-b", "-debug", "-gc3","-inc"],
            "problemMatcher": [
            {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }, "$harbour"]
        },
        {
            "taskName": "build_noLib",
            "isBuildCommand": false,
            "args": [ "${relativeFile}", "-gtcgi", "-w", "-ql", "-debug", "-inc" ],
            "problemMatcher": [
            {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }, "$harbour"]
        },
        {
            "taskName": "createLibrary",
            "args": [ "dbg_lib", "-w", "-ql", "-ocode_dbg","-gc3", "-hblib","-inc"],
            "problemMatcher": [
            {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }, "$harbour"]
        }
    ]
}