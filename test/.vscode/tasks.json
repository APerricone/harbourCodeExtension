{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [
        {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }, "$harbour"],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "build",
            "type": "HBMK2",
            "input": "${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "extraArgs": [
                "-lcode_dbg", "-L.", "-gtcgi", "-w", "-ql", "-b", "-gc3", "-winuni", "-debug"
            ],
            "windows": {
                "setupBatch": "c:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvars32.bat"
            }
        },
        {
            "label": "buildX",
            "command": "myBuildX.bat",
            "args": [ "${fileBasenameNoExtension}"]
        },
        {
            "label": "createLibrary",
            "type": "HBMK2",
            "input": "dbg_lib.prg",
            "options": {
                "env": {
                    "HB_INSTALL_PREFIX": "C:\\harbour"
                }
            },
            "window":
            {
                "setupBatch": "c:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvars32.bat"
            },
            "extraArgs": ["-w3", "-es2", "-ocode_dbg","-gc3", "-hblib","-inc","-winuni"]
        },
        {
            "label": "createLibraryX",
            "command": "build_libX.bat"
        }
    ]
}