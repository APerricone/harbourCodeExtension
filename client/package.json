{
    "name": "harbour",
    "displayName": "Harbour and xHarbour",
    "description": "Harbour and xHarbour languages support for visual studio code",
    "version": "0.9.10",
    "publisher": "aperricone",
    "icon": "harbourIcon.png",
    "main": "./dist/extension",
    "repository": {
        "url": "https://github.com/APerricone/harbourCodeExtension"
    },
    "activationEvents": [
        "onLanguage:harbour",
        "onCommand:harbour.getdbgcode",
        "workspaceContains:**/*.prg"
    ],
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Debuggers",
        "Snippets"
    ],
    "dependencies": {
        "true-case-path": "^2.2.1",
        "vscode-debugadapter": "^1.38.0",
        "vscode-debugprotocol": "^1.38.0",
        "vscode-languageclient": "^6.1.0",
        "vscode-nls": "^4.1.1"
    },
    "scripts": {
        "vscode:prepublish": "node copy.js",
        "prelanch": "webpack --mode development",
        "webpack2": "webpack --mode production"
    },
    "contributes": {
        "problemMatchers": [
            {
                "name": "harbour",
                "owner": "harbour",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(?:([^\\(]*)\\((\\d+)\\)\\s+)(Warning|Error)\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        ],
        "commands": [
            {
                "command": "harbour.getdbgcode",
                "title": "%harbour.dbgCodeCmd%"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Harbour compiler",
            "properties": {
                "harbour.validating": {
                    "type": "boolean",
                    "description": "%harbour.validating%",
                    "default": true
                },
                "harbour.compilerExecutable": {
                    "type": "string",
                    "description": "%harbour.compilerExecutable%",
                    "default": "harbour"
                },
                "harbour.extraOptions": {
                    "type": "string",
                    "description": "%harbour.extraOptions%",
                    "default": ""
                },
                "harbour.extraIncludePaths": {
                    "type": "array",
                    "description": "%harbour.extraIncludePaths%",
                    "items": {
                        "type": "string",
                        "default": ""
                    }
                },
                "harbour.warningLevel": {
                    "type": "number",
                    "default": 1,
                    "maximum": 3,
                    "minimum": 0,
                    "description": "%harbour.warningLevel%"
                },
                "harbour.decorator": {
                    "type": "boolean",
                    "default": true,
                    "description": "%harbour.decorator%"
                },
                "harbour.workspaceDepth": {
                    "type": "number",
                    "default": 0,
                    "minimum": 0,
                    "description": "%harbour.workspaceDepth%"
                }
            }
        },
        "languages": [
            {
                "id": "harbour",
                "aliases": [
                    "Harbour",
                    "xHarbour",
                    "FlagShip",
                    "Clipper",
                    "xBase"
                ],
                "extensions": [
                    ".prg",
                    ".ch",
                    ".hbx",
                    ".hb"
                ],
                "configuration": "./syntaxes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "harbour",
                "scopeName": "source.harbour",
                "path": "./syntaxes/harbour.tmLanguage.json",
                "embeddedLanguages": {
                    "source.c": "c"
                }
            }
        ],
        "breakpoints": [
            {
                "language": "harbour"
            }
        ],
        "debuggers": [
            {
                "type": "harbour-dbg",
                "label": "Harbour",
                "program": "./dist/debugger.js",
                "runtime": "node",
                "languages": [
                    "harbour"
                ],
                "initialConfigurations": [
                    {
                        "type": "harbour-dbg",
                        "request": "launch",
                        "name": "%harbour.initialConfigurations%",
                        "program": "${workspaceFolder}/Program",
                        "workingDir": "${workspaceFolder}/",
                        "sourcePaths": [
                            "${workspaceFolder}"
                        ]
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Harbour launch",
                        "description": "%harbour.configurationSnippetsDesc%",
                        "body": {
                            "type": "harbour-dbg",
                            "request": "launch",
                            "name": "%harbour.configurationSnippets%",
                            "program": "^\"\\${workspaceFolder}/${2:Program}\"",
                            "workingDir": "${workspaceFolder}/",
                            "sourcePaths": "^[\"\\${workspaceFolder}\"]"
                        }
                    },
                    {
                        "label": "Harbour attach",
                        "description": "%harbour.configurationSnippetsDesc2%",
                        "body": {
                            "type": "harbour-dbg",
                            "request": "attach",
                            "name": "%harbour.configurationSnippets2%",
                            "program": "^\"\\${workspaceFolder}/${2:Program}\"",
                            "sourcePaths": "^[\"\\${workspaceFolder}\"]"
                        }
                    }
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "workspaceRoot": {
                                "type": "string",
                                "default": "${workspaceFolder}",
                                "deprecationMessage": "%harbour.launch.workspaceRoot%"
                            },
                            "program": {
                                "type": "string",
                                "description": "%harbour.launch.program%",
                                "required": true
                            },
                            "workingDir": {
                                "type": "string",
                                "description": "%harbour.launch.workingDir%",
                                "default": "${workspaceFolder}/",
                                "required": true
                            },
                            "arguments": {
                                "type": "array",
                                "description": "%harbour.launch.arguments%",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "%harbour.launch.stopOnEntry%",
                                "default": false
                            },
                            "sourcePaths": {
                                "type": "array",
                                "description": "%harbour.launch.sourcePaths%",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "${workspaceFolder}"
                                ]
                            },
                            "terminalType": {
                                "type": "string",
                                "description": "%harbour.launch.terminalType%",
                                "default": "none",
                                "enum": [
                                    "none",
                                    "external",
                                    "integrated"
                                ]
                            },
                            "port": {
                                "type": "number",
                                "description": "%harbour.launch.port%",
                                "default": "6110"
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "workspaceRoot": {
                                "type": "string",
                                "default": "${workspaceFolder}",
                                "deprecationMessage": "%harbour.launch.workspaceRoot%"
                            },
                            "program": {
                                "type": "string",
                                "description": "%harbour.launch.program%"
                            },
                            "sourcePaths": {
                                "type": "array",
                                "description": "%harbour.launch.sourcePaths%",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "${workspaceFolder}"
                                ]
                            },
                            "port": {
                                "type": "number",
                                "description": "%harbour.launch.port%",
                                "default": "6110"
                            }
                        }
                    }
                }
            }
        ],
        "snippets": [
            {
                "language": "harbour",
                "path": "harbour.code-snippets"
            }
        ],
        "taskDefinitions": [
            {
                "type": "Harbour",
                "required": [
                    "output"
                ],
                "properties": {
                    "input": {
                        "type": "string",
                        "default": "${file}"
                    },
                    "output": {
                        "type": "string",
                        "enum": [
                            "portable",
                            "C code"
                        ]
                    },
                    "c-type": {
                        "type": "string",
                        "enum": [
                            "compact",
                            "normal",
                            "verbose",
                            "real C Code"
                        ],
                        "default": "compact"
                    }
                }
            },
            {
                "type": "HBMK2",
                "required": [
                    "input"
                ],
                "properties": {
                    "input": {
                        "type": "string",
                        "default": "${file}"
                    },
                    "output": {
                        "type": "string",
                        "default": "${fileBasenameNoExtension}"
                    },
                    "libraries": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "platform": {
                        "type": "string",
                        "enum": [
                            "linux",
                            "darwin",
                            "win",
                            "wce",
                            "os2",
                            "dos",
                            "bsd",
                            "hpux",
                            "beos",
                            "qnx",
                            "android",
                            "vxworks",
                            "symbian",
                            "cygwin",
                            "minix",
                            "aix",
                            "sunos"
                        ]
                    },
                    "compiler": {
                        "type": "string",
                        "enum": ["gcc", "clang", "icc", "watcom", "sunpro", "open64",
                            "mingw", "msvc", "bcc", "bcc64", "pocc", "xcc", "mingw64",
                            "msvc64", "msvcia64", "iccia64", "pocc64", "mingwarm", 
                            "msvcarm", "poccarm", "gccomf", "djgpp", "gccarm", "diab"
                        ]
                    },
                    "debugSymbols": {
                        "type": "boolean",
                        "default": false,
                        "title": "if true include the libray for debugging on VSCode"
                    }
                }
            }
        ]
    },
    "devDependencies": {
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    }
}
